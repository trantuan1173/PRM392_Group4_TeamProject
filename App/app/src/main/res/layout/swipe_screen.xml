<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <!-- Top Bar -->

    <!-- Card View -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="34dp"
            android:src="@drawable/user" />

        <ImageView
            android:layout_width="49dp"
            android:layout_height="46dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/heart"
            app:tint="#FF4081" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="34dp"
            android:src="@drawable/chat" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/userCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomActions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/girrl" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sophie, 24"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photographer â€¢ 3 miles away"
                    android:textColor="#EEEEEE"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/interests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Travel   Photography   Art"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Online dot -->
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation Actions -->
    <LinearLayout
        android:id="@+id/bottomActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnDislike"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/round_white"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:src="@drawable/close"
            android:contentDescription="@string/dislike_button_desc" />

        <ImageButton
            android:id="@+id/btnLike"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:scaleType="centerInside"
            android:background="@drawable/round_gradient"
            android:padding="12dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/like_button_desc" />


        <ImageButton
            android:id="@+id/btnBoost"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/round_white"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:src="@drawable/boot"
            android:contentDescription="@string/boost_button_desc" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
